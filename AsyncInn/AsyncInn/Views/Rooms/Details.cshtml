@model AsyncInn.Models.Room

@{
    ViewData["Title"] = "Rooms - Details";
    
}

<h1 class="title">Room Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Layout)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Layout)
        </dd>
        <dt>
            Amenities:
        </dt>
        @{
            var amenitiesList = ViewData["Amenities"] as List<string>;
            foreach (string amenity in amenitiesList)
            {
                <dd>
                    @amenity;
                </dd>
            }
        } 
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index" class="back">Back to List</a>
</div>
